<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <AssemblyName>BindOpen.Scoping.Extensions</AssemblyName>
    <PackageId>BindOpen.Scoping.Extensions</PackageId>
    <Product>BindOpen.Scoping</Product>
    <Company>BindOpen</Company>
    <Copyright>Copyright ©BindOpen 2011-2023</Copyright>
    <Description>BindOpen is a framework that allows you to build widely-extended applications. This package provides core classes of the BindOpen.Scoping.Scopes.</Description>
    <Authors>Sumer Team</Authors>
    <RootNamespace>BindOpen.Scoping.Extensions</RootNamespace>
    <PackageProjectUrl>https://github.com/bindopen/BindOpen.Scoping</PackageProjectUrl>
    <RepositoryUrl>https://github.com/bindopen/BindOpen.Scoping.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageIcon>bindopen_icon.png</PackageIcon>
